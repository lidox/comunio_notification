<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
		<description>Persistence unit for the JPA tutorial of the Hibernate Getting Started Guide</description>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>de.as.javabot.comunio.User2</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/comunio" />
			<property name="javax.persistence.jdbc.user" value="com" />
			<property name="javax.persistence.jdbc.password" value="com" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<!--<property name="hibernate.hbm2ddl.auto" value="create" /> -->
		</properties>
	</persistence-unit>

